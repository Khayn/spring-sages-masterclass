<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="incrementalPaymentIdGenerator" class="spring.masterclass.sages.payments.IncrementalPaymentIdGenerator"/>
    <bean id="uuidPaymentIdGenerator" class="spring.masterclass.sages.payments.UuidPaymentIdGenerator"/>
    <bean id="hashMapPaymentRepository" class="spring.masterclass.sages.payments.HashMapPaymentRepository"/>

    <bean id="fakePaymentService" class="spring.masterclass.sages.payments.FakePaymentService" init-method="init"
          destroy-method="destroy">
        <constructor-arg name="paymentIdGenerator" ref="uuidPaymentIdGenerator"/>
        <constructor-arg name="paymentRepository" ref="hashMapPaymentRepository"/>
    </bean>

    <bean class="spring.masterclass.sages.payments.PaymentConsoleLogger"/>

</beans>